<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="95dp"
             android:layout_alignParentBottom="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_first_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_tab_home_pre"/>

            <TextView
                android:id="@+id/tab_first_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="2dp"
                android:text="@string/easy_rent_str"
                android:textSize="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_second_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_tab_family"
                />

            <TextView
                android:id="@+id/tab_second_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="2dp"
                android:text="@string/easy_family_str"
                android:textSize="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <FrameLayout
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_third_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_tab_session"
                />

            <TextView
                android:id="@+id/tab_third_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="2dp"
                android:text="@string/easy_msg_str"
                android:textSize="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fouth"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_fouth_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_tab_mine"
                />

            <TextView
                android:id="@+id/tab_fouth_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="2dp"
                android:text="@string/easy_mine_str"
                android:textSize="10dp"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        >

        <RelativeLayout
            android:layout_marginBottom="8dp"
            android:id="@+id/center_click"
            android:layout_width="wrap_content"
            android:layout_height="65dip"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/center_img"
                android:layout_width="65dip"
                android:layout_height="65dip"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_tab_transform"/>

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/add"
                android:visibility="gone"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="7dp"
            android:text=""
            android:textSize="10dp"/>
    </FrameLayout>

</FrameLayout>