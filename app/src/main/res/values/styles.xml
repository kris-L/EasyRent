<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="XwWidget" />

    <style name="XwWidget.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray_dd</item>
    </style>

    <style name="MainAddDialog" parent="@style/commonDialog">
        <item name="android:windowAnimationStyle">@style/MainAddDialogAnimation</item>
    </style>

    <style name="MainAddDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_down</item>
        <item name="android:windowExitAnimation">@anim/out_to_down</item>
    </style>

    <!--分割线-->
    <style name="DivideLine" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divide_line</item>
    </style>

    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
              <item name="android:button">@drawable/checkbox_style</item>
    </style>

</resources>
